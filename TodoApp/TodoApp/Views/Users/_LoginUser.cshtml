@model LoginViewModel

<section class="controls">
    <div class="form-group">
        <div class="label-group">
            <label asp-for="Email" class="form-label"></label>
            <span class="required">*</span>
        </div>

        <input asp-for="Email" class="form-input" placeholder="jhon@gmail.com"/>
        <span asp-validation-for="Email" class="error"></span>
    </div>

    <div class="form-group">
        <div class="label-group">
            <label asp-for="Username" class="form-label"></label>
            <span class="required">*</span>
        </div>

        <input asp-for="Username" class="form-input" placeholder="jhon45..."/>
        <span asp-validation-for="Username" class="error"></span>
    </div>

    <div class="form-group">
        <div class="label-group">
            <label asp-for="Password" class="form-label"></label>
            <span class="required">*</span>
        </div>

        <input asp-for="Password" class="form-input" placeholder="******"/>
        <span asp-validation-for="Password" class="error"></span>
    </div>

    <div class="form-group">
        <div class="form-check">
            <input asp-for="RememberMe" type="checkbox" class="check-input" />
            <label asp-for="RememberMe" class="check-label"></label>
        </div>

        <span asp-validation-for="RememberMe" class="warning"></span>
    </div>
</section>